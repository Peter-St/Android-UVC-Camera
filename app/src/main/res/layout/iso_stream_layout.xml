<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main"
    android:id="@+id/rootView"
    >

    <FrameLayout
        android:id="@+id/video_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="false" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical|center_horizontal"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Main"
            android:id="@+id/buttonView"
            >



            <ImageButton
                android:id="@+id/Bildaufnahme"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="false"
                android:contextClickable="false"
                android:longClickable="true"
                android:padding="2dp"
                android:soundEffectsEnabled="true"
                android:background="@drawable/bg_button_bildaufnahme"
                />

            <ToggleButton
                android:id="@+id/videoaufnahme"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"


                android:layout_marginStart="2dp"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="0dp"

                android:adjustViewBounds="false"
                android:background="@drawable/bg_button_videoaufnahme"
                android:contextClickable="false"
                android:longClickable="true"
                android:padding="2dp"
                android:soundEffectsEnabled="true"
                android:textOff=""
                android:textOn="" />

            <Button
                android:id="@+id/stopKameraknopf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/settingsButton"
                android:layout_alignRight="@+id/settingsButton"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_button_stop"
                android:onClick="stopTheCameraStreamClickEvent"
                android:text="Stop !" />



            <ImageButton
                android:id="@+id/flipLeftButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="130dp"
                android:background="@drawable/bg_button_flip_left"
                android:onClick="flipLeft"
                />

            <ImageButton
                android:id="@+id/flipRightButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignEnd="@+id/stopKameraknopf"
                android:layout_alignRight="@+id/stopKameraknopf"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="131dp"
                android:background="@drawable/bg_button_flip_right"
                android:onClick="flipRight"
                />


            <ToggleButton
                android:id="@+id/flipVerticalButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignEnd="@+id/stopKameraknopf"
                android:layout_alignRight="@+id/stopKameraknopf"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="60dp"
                android:layout_marginRight="58dp"
                android:layout_marginBottom="280dp"
                android:background="@drawable/bg_toggle_button_flip_vertical"
                android:onClick="flipVertical"
                android:textOn=""
                android:textOff=""
                />

            <ToggleButton
                android:id="@+id/flipHorizontalButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="280dp"
                android:background="@drawable/bg_toggle_button_flip_horizontal"
                android:onClick="flipHorizontal"
                android:textOn=""
                android:textOff=""
                />


            <ImageView
                android:id="@+id/aspect_ratio_image"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_marginTop="250px"
                android:layout_marginLeft="180px"
                android:src="@drawable/aspect_ratio"
                android:layout_above="@+id/aspect_ratio_switch"


                />

            <Switch
                android:id="@+id/aspect_ratio_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aspect Ratio"

                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="450dp"


                />





            <Button
                android:id="@+id/startStream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_button_start_stream"
                android:text="Transmission start" />

            <io.github.yavski.fabspeeddial.FabSpeedDial
                android:id="@+id/settingsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="start|end"
                app:touchGuard="false"
                app:fabGravity="top_end"
                app:fabDrawable="@drawable/bg_button_settings"
                app:fabBackgroundTint="#50000080"
                app:fabMenu="@menu/iso_stream_settings_button"
                app:miniFabBackgroundTintList="@array/fab_speed_colors"
                app:miniFabDrawableTint="@color/black"
                app:miniFabTitleTextColor="@color/black" />

            <FrameLayout
                android:id="@+id/switch_view"
                style="@style/SwitchContainer"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_below="@id/settingsButton"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/menu_item_lower_resolution"
                    android:textColor="#000080"
                    android:textSize="18sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_lowerResolution"
                    style="@style/Switch"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp" />
            </FrameLayout>

            <SeekBar
                android:id="@+id/simpleSeekBar"
                android:paddingTop="60dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/defaultButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/simpleSeekBar"
                android:layout_marginTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="45dp"
                android:text="Default\nValue" />

            <Switch
                android:id="@+id/switchAuto"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/defaultButton"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="58dp"
                android:layout_marginRight="58dp"
                android:text="Auto"
                android:textOff="Auto\nOFF"
                android:textOn="Auto\nON"
                android:textSize="24sp" />



        </RelativeLayout>
    </FrameLayout>





</RelativeLayout>